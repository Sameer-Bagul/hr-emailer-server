# Server Configuration
NODE_ENV=production
PORT=10000

# Client Configuration (Your frontend deployment URL)
CLIENT_URL=https://your-frontend-app.netlify.app

# Email Configuration (Gmail SMTP - Required)
EMAIL=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Main User Email (for daily reports)
MAIN_USER_EMAIL=your-email@gmail.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Scheduler Configuration
DAILY_CAMPAIGN_TIME=9
CLEANUP_INTERVAL_HOURS=1
DAILY_EMAIL_LIMIT=300

# Debug Mode
DEBUG=false
